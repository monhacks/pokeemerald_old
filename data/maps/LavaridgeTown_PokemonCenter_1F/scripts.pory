script EnclavaTown_PC_Object_HexManiac {
    lock
    faceplayer
    msgbox(format("{COLOR RED}..."))
    if (flag(FLAG_ITEM_ENCLAVA_PC_LINK_CABLE) == TRUE) {
        applymovement(6, Common_Movement_WalkInPlaceUp)
        waitmovement(0)
        closemessage
        release
        end
    } else {
        checkpartymon(SPECIES_HAUNTER)
        if (var(VAR_RESULT) == TRUE) {
            applymovement(6, Common_Movement_ExclamationMark)
            waitmovement(0)
            playse(SE_PIN)
            waitse
            delay(16)
            msgbox(format("{COLOR RED}Is that a Haunter?\pHaunter is a unique Pokémon, as it can only evolve through the usage of a {COLOR GREEN}Link Cable{COLOR RED}.\pHere, take one."))
            giveitem(ITEM_LINK_CABLE, 1)
            msgbox(format("{COLOR RED}That can be used on more than Haunter, some other Pokémon can only evolve through the {COLOR GREEN}Link Cable{COLOR RED}."), MSGBOX_AUTOCLOSE)
            applymovement(6, Common_Movement_WalkInPlaceUp)
            waitmovement(0)
            setflag(FLAG_ITEM_ENCLAVA_PC_LINK_CABLE)
            release
            end
        } else {
            checkpartymon(SPECIES_GASTLY)
            if (var(VAR_RESULT) == TRUE) {
                applymovement(6, Common_Movement_ExclamationMark)
                waitmovement(0)
                playse(SE_PIN)
                waitse
                delay(16)
                msgbox(format("{COLOR RED}Oh...\pThat's a Gastly..."), MSGBOX_AUTOCLOSE)
                applymovement(6, Common_Movement_WalkInPlaceUp)
                waitmovement(0)
                release
                end
            } else {
                applymovement(6, Common_Movement_WalkInPlaceUp)
                waitmovement(0)
                closemessage
                release
                end
            }
            
        }
    }
    
}

