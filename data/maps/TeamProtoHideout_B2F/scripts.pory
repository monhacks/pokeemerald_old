	msgbox(format("{COLOR BLUE}No one has out-smarted me in a Pokémon battle..."), MSGBOX_NPC)
	end
}
script ProtoHideoutB2F_Trainer_Scientist6 {
	trainerbattle_single(TRAINER_SCIENTIST_HIDEOUT_6, format("{COLOR BLUE}I caught you in the corner of my eye!\pNow scram!"), format("What a drag!"))
