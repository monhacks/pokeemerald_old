// trainers 
script ProtoHideoutB2F_Trainer_Grunt3 {
	trainerbattle_single(TRAINER_GRUNT_HIDEOUT_3, format("{COLOR RED}You!\nYou're the intruder!"), format("Blasted!"))
	msgbox(format("{COLOR RED}You are quite the strong trainer, but you wouldn't stand a chance against {COLOR GREEN}Apollo{COLOR RED}!"), MSGBOX_NPC)
	end
}
script ProtoHideoutB2F_Trainer_Scientist4 {
	trainerbattle_single(TRAINER_SCIENTIST_HIDEOUT_4, format("{COLOR BLUE}According to my calculations, you're not going to win this battle!"), format("I guess my numbers were slightly off..."))
	msgbox(format("{COLOR BLUE}My margin of error was very minimal, but alas it caused my downfall."), MSGBOX_NPC)
	end
}
script ProtoHideoutB2F_Trainer_Scientist5 {
